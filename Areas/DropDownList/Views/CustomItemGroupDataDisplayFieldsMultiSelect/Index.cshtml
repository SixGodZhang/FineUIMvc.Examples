@{
    ViewBag.Title = "DropDownList/CustomItemGroupDataDisplayFieldsMultiSelect";
    var F = Html.F();
}

@section head {

    <style>
        .item-text {
            
            margin-bottom: 5px;
            display: inline-block;
            font-weight: bold;
        }

        .item-desc {
            font-size: 0.9em;
            word-break: break-all;
        }

        .f-field-dropdownlist-pop-groupitem {
            padding-left: 20px !important;
        }
    </style>

}

@section body {


    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).ShowBorder(true).Title("分组+自定义列表项+多选+复选框").ShowHeader(true)
        .Items(
            F.DropDownList().ID("DropDownList1").EnableMultiSelect(true).EnableCheckBoxSelect(true).EnableGroup(true).DataTextField("Name").DataValueField("Id").DataGroupField("Major").DataDisplayFields("Name", "Desc").DataDisplayFormatString("<div class=\"item-text\">{0}</div><div class=\"item-desc\">{1}</div>")
                .DataSource(DataSourceUtil.GetDataTable()),
            F.Button().ID("btnGetSelection").Text("获取此下拉列表的选中项").OnClick(Url.Action("btnGetSelection_Click"), "DropDownList1")
        )
    )
    <br>

    @(F.Label().ID("labResult"))
    <br>

}

