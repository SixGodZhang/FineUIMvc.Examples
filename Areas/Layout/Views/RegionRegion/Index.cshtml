@{
    ViewBag.Title = "Layout/RegionRegion";
    var F = Html.F();
}


@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region).IsViewPort(true)
        .Items(
            F.Panel().ID("panelLeftRegion").RegionPosition(Position.Left).RegionSplit(true).Width(200).Title("左侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label2").Text("左侧面板的内容")
                ),
            F.Panel().RegionPosition(Position.Center).ShowBorder(false).ShowHeader(false).Layout(LayoutType.Fit)
                .Items(
                    F.Panel().ID("Panel2").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region)
                        .Items(
                            F.Panel().ID("panel3").RegionPosition(Position.Left).RegionSplit(true).Width(200).Title("左侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                                .Items(
                                    F.Label().ID("Label1").Text("左侧面板的内容")
                                ),
                            F.Panel().ID("Panel4").RegionPosition(Position.Center).ShowBorder(false).ShowHeader(false).Layout(LayoutType.Fit)
                                .Items(
                                    F.Panel().ID("Panel5").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region)
                                        .Items(
                                            F.Panel().ID("panel6").RegionPosition(Position.Left).RegionSplit(true).Width(200).Title("左侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                                                .Items(
                                                    F.Label().ID("Label3").Text("左侧面板的内容")
                                                ),
                                            F.Panel().ID("panel7").RegionPosition(Position.Center).Title("中间面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                                                .Items(
                                                    F.Label().ID("Label4").Text("中间面板的内容")
                                                )
                                        )
                                )
                        )
                )
        )
    )



}

