@{
    ViewBag.Title = "Layout/Region";
    var F = Html.F();
}


@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region).IsViewPort(true)
        .Items(
            F.Panel().ID("panelTopRegion").RegionPosition(Position.Top).RegionSplit(true).Height(100).Title("顶部面板").ShowBorder(true).ShowHeader(true).BodyPadding(10).IconFont(IconFont._PullUp)
                .Items(
                    F.Label().ID("Label1").Text("顶部面板的内容")
                ),
            F.Panel().ID("panelLeftRegion").RegionPosition(Position.Left).RegionSplit(true).Width(250).Title("左侧面板（有提示信息）").TitleToolTip("左侧面板（有提示信息）").ShowBorder(true).ShowHeader(true).BodyPadding(10).IconFont(IconFont._PullLeft)
                .Items(
                    F.Label().ID("Label2").Text("左侧面板的内容")
                ),
            F.Panel().ID("panelCenterRegion").RegionPosition(Position.Center).Title("中间面板").ShowBorder(true).ShowHeader(true).BodyPadding(10).IconFont(IconFont._RoundPlus)
                .Items(
                    F.Label().ID("Label3").Text("中间面板的内容"),
                    F.Label().ID("Label6"),
                    F.Button().ID("Button4").Text("更新左侧面板的标题").OnClick(Url.Action("Button4_Click")),
                    F.Label().ID("Label7"),
                    F.Button().ID("btnHideBottomRegion").Text("隐藏/显示底部面板").OnClick(Url.Action("btnHideBottomRegion_Click"), new Parameter("hidden", "F.ui.panelBottomRegion.hidden"))
                ),
            F.Panel().ID("panelRightRegion").RegionPosition(Position.Right).RegionSplit(true).Width(200).Title("右侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10).IconFont(IconFont._PullRight)
                .Items(
                    F.Label().ID("Label4").Text("右侧面板的内容")
                ),
            F.Panel().ID("panelBottomRegion").RegionPosition(Position.Bottom).RegionSplit(true).Height(100).Title("底部面板").ShowBorder(true).ShowHeader(true).BodyPadding(10).IconFont(IconFont._PullDown)
                .Items(
                    F.Label().ID("Label5").Text("底部面板的内容")
                )
        )
    )


}

