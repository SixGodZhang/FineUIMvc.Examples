    ViewBag.Title = "Layout/RegionMultiRegions";
    var F = Html.F();
}


@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region).IsViewPort(true)
        .Items(
            F.Panel().RegionPosition(Position.Top).RegionSplit(true).Height(100).Title("顶部面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
