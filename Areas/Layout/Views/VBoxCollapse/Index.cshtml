@{
    ViewBag.Title = "Layout/VBoxCollapse";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").ID("Panel2").Height(550).ShowBorder(true).Layout(LayoutType.VBox).BoxConfigChildMargin("0 0 5 0").BodyPadding(10).ShowHeader(true).Title("面板（Layout=VBox BoxConfigChildMargin=0 0 5 0）")
        .Items(
            F.Panel().ID("Panel3").Title("面板1").Height(120).BodyPadding(10).EnableCollapse(true).ShowBorder(true).ShowHeader(true)
                .Items(
                    F.Label().ID("Label2").Text("Height=120")
                ),
            F.Panel().ID("Panel1").Title("面板2").BoxFlex(1).BodyPadding(10).EnableCollapse(true).ShowBorder(true).ShowHeader(true)
                .Items(
                    F.Label().ID("Label1").Text("BoxFlex=1")
                ),
            F.Panel().ID("Panel4").Title("面板3").BoxFlex(2).Margin(0).BodyPadding(10).EnableCollapse(true).ShowBorder(true).ShowHeader(true)
                .Items(
                    F.Label().ID("Label3").Text("BoxFlex=2 Margin=0")
                )
        )
    )


}

