@{
    ViewBag.Title = "Layout/RegionSplitWidth";
    var F = Html.F();
}


@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).Layout(LayoutType.Region).IsViewPort(true)
        .Items(
            F.Panel().ID("panelTopRegion").RegionPosition(Position.Top).RegionSplit(true).RegionSplitWidth(3).Height(100).Title("顶部面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label1").Text("顶部面板的内容")
                ),
            F.Panel().ID("panelLeftRegion").RegionPosition(Position.Left).RegionSplit(true).RegionSplitWidth(3).Width(200).Title("左侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label2").Text("左侧面板的内容")
                ),
            F.Panel().ID("panelCenterRegion").RegionPosition(Position.Center).Title("中间面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label3").Text("中间面板的内容")
                ),
            F.Panel().ID("panelRightRegion").RegionPosition(Position.Right).RegionSplit(true).RegionSplitWidth(3).Width(200).Title("右侧面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label4").Text("右侧面板的内容")
                ),
            F.Panel().ID("panelBottomRegion").RegionPosition(Position.Bottom).RegionSplit(true).RegionSplitWidth(3).Height(100).Title("底部面板").ShowBorder(true).ShowHeader(true).BodyPadding(10)
                .Items(
                    F.Label().ID("Label5").Text("底部面板的内容")
                )
        )
    )

}

