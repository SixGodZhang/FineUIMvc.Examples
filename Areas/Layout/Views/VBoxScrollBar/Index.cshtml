@{
    ViewBag.Title = "Layout/VBoxScrollBar";
    var F = Html.F();
}


@section body {

    @(F.Panel().ID("Panel5").ShowBorder(true).Layout(LayoutType.VBox).AutoScroll(true).ShowHeader(true).Title("面板（Layout=VBox BodyPadding=5 BoxConfigChildMargin=0 0 5 0 AutoScroll=true），高度变小时可能出现纵向滚动条").BoxConfigChildMargin("0 0 5 0").BodyPadding(10).IsViewPort(true)
        .Items(
            F.Panel().ID("Panel1").Title("面板1").Height(300).BodyPadding(10).ShowBorder(true).ShowHeader(false)
                .Items(
                    F.Label().ID("Label1").Text("Height=300")
                ),
            F.Panel().ID("Panel2").Title("面板2").BoxFlex(1).MinHeight(300).Margin(0).BodyPadding(10).ShowBorder(true).ShowHeader(false)
                .Items(
                    F.Label().ID("Label3").Text("BoxFlex=1 Margin=0 MinHeight=300")
                )
        )
    )


}

