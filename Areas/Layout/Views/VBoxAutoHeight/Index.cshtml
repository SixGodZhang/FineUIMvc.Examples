@{
    ViewBag.Title = "Layout/VBoxAutoHeight";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").ID("Panel5").ShowBorder(true).Layout(LayoutType.VBox).ShowHeader(true).Title("面板（Layout=VBox BodyPadding=5 BoxConfigChildMargin=0 0 5 0）").BoxConfigChildMargin("0 0 5 0").BodyPadding(10)
        .Items(
            F.Panel().ID("Panel1").Title("面板1").Height(100).BodyPadding(10).ShowBorder(true).ShowHeader(false)
                .Items(
                    F.Label().ID("Label1").Text("Height=100")
                ),
            F.Panel().ID("Panel2").Title("面板2").BoxFlex(1).MinHeight(200).Margin(0).BodyPadding(10).ShowBorder(true).ShowHeader(false)
                .Items(
                    F.Label().ID("Label3").Text("BoxFlex=1 Margin=0 MinHeight=200")
                )
        )
    )


}

