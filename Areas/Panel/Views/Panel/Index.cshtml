@{
    ViewBag.Title = "Panel/Panel";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").EnableCollapse(true).IconFont(IconFont._VolumeUp).BodyPadding(10).Title("面板").ID("Panel1")
        .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Top).ID("Toolbar1")
                .Items(
                    F.ToolbarText().ID("ToolbarText1").Text("工具条文本一"),
                    F.ToolbarSeparator().ID("ToolbarSeparator1"),
                    F.ToolbarText().ID("ToolbarText2").Text("工具条文本二"),
                    F.ToolbarSeparator().ID("ToolbarSeparator2"),
                    F.Button().Text("工具条按钮").ID("btnToolbarButton").Listener("click", "onToolbarButtonClick"),
                    F.ToolbarFill().ID("ToolbarFill1"),
                    F.ToolbarText().ID("ToolbarText4").Text("工具条文本四")
                )
        )
        .Items(
            F.Panel().AutoScroll(true).ShowHeader(true).EnableCollapse(true).BodyPadding(10).Height(200).ShowBorder(true).Title("内容面板").ID("Panel2").Content("可以放置<a href=\"http://www.w3schools.com/html/\" target=\"_blank\">HTML</a>标签。")
        )
    )
    <br>

    @(F.Button().OnClick(Url.Action("Button2_Click"), new Parameter("collapsed", "F.ui.Panel1.collapsed")).Text("检查面板的折叠状态").CssClass("marginr").ID("Button2"))

    @(F.Button().OnClick(Url.Action("Button4_Click")).Text("更新面板的标题").ID("Button4"))
    <br>
    <br>

    @(F.Button().OnClick(Url.Action("Button3_Click"), new Parameter("collapsed", "F.ui.Panel2.collapsed")).Text("展开/折叠内容面板").ID("Button3"))
    <br>
    <br>

    @(F.Button().OnClick(Url.Action("Button5_Click")).Text("更新工具条文本一的值").CssClass("marginr").ID("Button5"))

    @(F.Button().OnClick(Url.Action("Button6_Click"),
            new Parameter("textHidden", "F.ui.ToolbarText1.hidden"),
            new Parameter("separatorHidden", "F.ui.ToolbarSeparator1.hidden")).Text("显示/隐藏工具条文本一").ID("Button6")
    )
    <br>
    <br>

    @(F.Button().OnClick(Url.Action("Button7_Click")).CssClass("marginr").Text("隐藏工具栏").ID("Button7"))

    @(F.Button().OnClick(Url.Action("Button8_Click")).Text("显示工具栏").ID("Button8"))
    <br>
    <br>

    @(F.Button().OnClick(Url.Action("Button9_Click"), new Parameter("iconFont", "F.ui.Panel1.iconFont")).CssClass("marginr").Text("点击修改面板图标（在三个图标之前切换）").ID("Button9"))

    @(F.Button().OnClick(Url.Action("Button10_Click")).CssClass("marginr").Text("清空面板图标").ID("Button10"))
    <br>


}


@section script {

    <script>

        function onToolbarButtonClick(event) {
            F.alert('你点击了工具栏按钮');
        }

    </script>

}