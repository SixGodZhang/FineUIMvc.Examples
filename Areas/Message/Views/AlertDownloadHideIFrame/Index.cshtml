@{
    ViewBag.Title = "Message/AlertDownloadHideIFrame";
    var F = Html.F();
}


@section body {

    @(F.Window().ID("Window2").Width(650).Height(300).Icon(Icon.TagBlue).Title("窗体（EnableIFrame=true）").EnableMaximize(true).EnableResize(true).IsModal(false).BodyPadding(10).EnableIFrame(true).IFrameUrl(Url.Content("~/Message/AlertDownloadHideIFrame/IFrameWindow")))


}


@section script {

    <script>

        function showConfirm() {
            F.confirm({
                message: '操作成功！点击确定按钮开始下载文件，点取消按钮弹出对话框',
                ok: function () {
                    window.location.href = '@Url.Action("DownloadTextFile")';
                },
                cancel: function () {
                    // 触发后台事件
                    F.doPostBack('@Url.Action("ConfirmCancel")');
                }
            });
        }


    </script>

}