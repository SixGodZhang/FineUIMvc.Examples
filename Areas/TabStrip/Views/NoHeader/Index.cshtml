@{
    ViewBag.Title = "TabStrip/NoHeader";
    var F = Html.F();
}


@section body {

    @(F.TabStrip().IsFluid(true).CssClass("blockpanel").ID("TabStrip1").Height(350).EnableTabCloseMenu(true).ShowBorder(true).ShowTabHeader(false).ActiveTabIndex(1)
        .Tabs(
            F.Tab().ID("Tab1").Title("标签一").EnableClose(false).BodyPadding(10)
                .Items(
                    F.Label().ID("Label5").Text("标签一中的文本")
                ),
            F.Tab().ID("Tab2").Title("标签二").BodyPadding(10).EnableClose(true)
                .Items(
                    F.Label().ID("Label4").Text("标签二中的文本")
                ),
            F.Tab().ID("Tab3").Title("标签三").BodyPadding(10).EnableClose(true).Layout(LayoutType.VBox)
                .Items(
                    F.Label().ID("Label3").Text("标签三中的文本"),
                    F.TabStrip().ID("TabStrip2").BoxFlex(1).EnableTabCloseMenu(true).ShowBorder(true).ActiveTabIndex(1)
                        .Tabs(
                            F.Tab().ID("Tab4").Title("标签四").EnableClose(false).BodyPadding(10)
                                .Items(
                                    F.Label().ID("Label1").Text("标签四中的文本")
                                ),
                            F.Tab().ID("Tab5").Title("标签五").EnableClose(false).BodyPadding(10)
                                .Items(
                                    F.Label().ID("Label2").Text("标签五中的文本")
                                )
                        )
                )
        )
    )
    <br>

    @(F.Button().ID("btnShowActiveTab1").Text("激活标签一").CssClass("marginr").Listener("click", "onShowActiveTab1Click"))

    @(F.Button().ID("btnShowActiveTab2").Text("激活标签二").CssClass("marginr").Listener("click", "onShowActiveTab2Click"))

    @(F.Button().ID("btnShowActiveTab3").Text("激活标签三").CssClass("marginr").Listener("click", "onShowActiveTab3Click"))
    <br>
    <br>
    <br>
    <br>


}


@section script {

    <script>

        function onShowActiveTab1Click(event) {
            F.ui.Tab1.active();
        }

        function onShowActiveTab2Click(event) {
            F.ui.Tab2.active();
        }

        function onShowActiveTab3Click(event) {
            F.ui.Tab3.active();
        }

    </script>
}