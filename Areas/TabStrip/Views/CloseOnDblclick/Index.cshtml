@{
    ViewBag.Title = "TabStrip/CloseOnDblclick";
    var F = Html.F();
}


@section body {

    @(F.TabStrip().IsFluid(true).CssClass("blockpanel").ID("TabStrip1").Height(450).EnableTabCloseMenu(true).ShowBorder(true).ActiveTabIndex(1).CloseOnDblClick(true)
        .Tabs(
            F.Tab().ID("Tab1").Title("标签一").EnableClose(false).BodyPadding(10)
                .Items(
                    F.Label().ID("Label5").Text("标签一中的文本")
                ),
            F.Tab().ID("Tab2").Title("标签二").BodyPadding(10).EnableClose(true)
                .Items(
                    F.Label().ID("Label4").Text("标签二中的文本")
                ),
            F.Tab().ID("Tab3").Title("标签三").Hidden(true).BodyPadding(10).EnableClose(true)
                .Items(
                    F.Label().ID("Label3").Text("标签三中的文本")
                ),
            F.Tab().ID("Tab4").Title("标签四").BodyPadding(10).EnableClose(true)
                .Items(
                    F.Label().ID("Label2").Text("标签四中的文本")
                ),
            F.Tab().ID("Tab5").EnableClose(true).Title("标签五（不支持双击关闭）").CloseOnDblClick(false).BodyPadding(10)
                .Items(
                    F.Label().ID("Label1").Text("标签五中的文本")
                )
        )
    )
    <br>
    <br>

    @(F.Button().ID("btnShowInClient").Text("显示标签三（客户端代码）").CssClass("marginr").Listener("click", "onShowInClientClick"))

    @(F.Button().ID("btnShowActiveInClient").Text("显示并激活标签三（客户端代码）").CssClass("marginr").Listener("click", "onShowActiveInClientClick"))

    @(F.Button().ID("btnHideInClient").Text("隐藏标签三（客户端代码）").Listener("click", "onHideClientClick"))
    <br>
    <br>

    @(F.Button().ID("btnShowInServer").Text("显示标签三（服务端代码）").CssClass("marginr").OnClick(Url.Action("btnShowInServer_Click")))

    @(F.Button().ID("btnShowActiveInServer").Text("显示并激活标签三（服务端代码）").CssClass("marginr").OnClick(Url.Action("btnShowActiveInServer_Click")))

    @(F.Button().ID("btnHideInServer").Text("隐藏标签三（服务端代码）").OnClick(Url.Action("btnHideInServer_Click")))
    <br>
    <br>
    <br>
    注：Tab 定义的 CloseOnDblclick 属性会覆盖 TabStrip 的同名属性。

}



@section script {

    <script>

        function onShowInClientClick(event) {
            F.ui.Tab3.show();
        }

        function onShowActiveInClientClick(event) {
            F.ui.Tab3.active();
        }

        function onHideClientClick(event) {
            F.ui.Tab3.hide();
        }

    </script>

}

