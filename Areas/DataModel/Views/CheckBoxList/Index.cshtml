@{
    ViewBag.SourceFiles = "~/Areas/DataModel/Models/CheckBoxListModel.cs";
    ViewBag.Title = "DataModel/CheckBoxList";
    var F = Html.F();
}

@model FineUIMvc.Examples.Areas.DataModel.Models.CheckBoxListModel


@section body {


    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).LabelWidth(120).ShowBorder(true).ShowHeader(true).Title("简单表单")
        .Items(
            F.CheckBoxFor(m => m.IsChecked).Text("复选框"),
            F.CheckBoxListFor(m=> m.CheckBoxList1)
                .Items(Model.CheckBoxList1Items.ToArray()),
            F.RadioButtonListFor(m => m.RadioButtonList1)
                .Items(Model.RadioButton1Items.ToArray()),
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").CssClass("marginr").Text("提交表单").OnClick(Url.Action("btnSubmit_Click"), "SimpleForm1"),
            F.Button().ID("btnReset").Text("重置表单").OnClientClick("F.ui.SimpleForm1.reset();")
        )
    )

}

