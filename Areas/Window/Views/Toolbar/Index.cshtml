@{
    ViewBag.Title = "Window/Toolbar";
    var F = Html.F();
}


@section body {

    @(F.Window().IsModal(false).AutoScroll(true).BodyPadding(10).EnableResize(true).EnableMaximize(true).Title("窗体").Icon(Icon.TagBlue).Height(300).Width(650).ID("Window1").Content("<div id=\"mylabel\">这是初始值！</div>")
        .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Top).ID("Toolbar3")
                .Items(
                    F.ToolbarText().ID("ToolbarText3").Text("工具条文本一"),
                    F.ToolbarSeparator().ID("ToolbarSeparator2"),
                    F.ToolbarText().ID("ToolbarText4").Text("工具条文本二"),
                    F.ToolbarSeparator().ID("ToolbarSeparator1"),
                    F.Button().Text("工具栏按钮").ID("Button1")
                ),
            F.Toolbar().ToolbarAlign(ToolbarAlign.Right).Position(ToolbarPosition.Bottom)
                .Items(
                    F.Button().Text("修改窗体内的文本值").OnClick(Url.Action("btnChangeText_Click")).ID("btnChangeText"),
                    F.Button().Text("关闭窗体").OnClick(Url.Action("btnClose_Click")).ID("btnClose")
                )
        )
    )
    <br>


}

