@{
    ViewBag.Title = "Block/NestingLeftRight";
    ViewBag.BodyBGColor = true;
    var F = Html.F();
}

@section head {

    <style>
        body.f-body {
            overflow-x: hidden;
        }

    </style>

}

@section body {

   @(F.Panel().IsFluid(true).Layout(LayoutType.Block).BlockConfigSpace(20).ShowBorder(false).ShowHeader(false)
        .Items(
            F.Panel().BlockMD(8).Layout(LayoutType.Block).BlockConfigSpace(20).ShowBorder(false).ShowHeader(false)
                .Items(
                    F.Panel().CssClass("blockpanel").BlockMD(6).Height(300).ShowBorder(true).ShowHeader(true).Title("1"),
                    F.Panel().CssClass("blockpanel").BlockMD(6).Height(300).ShowBorder(true).ShowHeader(true).Title("2"),
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(400).ShowBorder(true).ShowHeader(true).Title("3"),
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(400).ShowBorder(true).ShowHeader(true).Title("4")
                ),
            F.Panel().BlockMD(4).Layout(LayoutType.Block).BlockConfigSpace(20).ShowBorder(false).ShowHeader(false)
                .Items(
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(300).ShowBorder(true).ShowHeader(true).Title("5"),
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(200).ShowBorder(true).ShowHeader(true).Title("6"),
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(200).ShowBorder(true).ShowHeader(true).Title("7"),
                    F.Panel().CssClass("blockpanel").BlockMD(12).Height(200).ShowBorder(true).ShowHeader(true).Title("8")
                )
        )
)


}
