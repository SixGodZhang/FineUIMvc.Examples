@{
    ViewBag.Title = "DropDownBox/GridSearch";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).ShowBorder(true).Title("下拉表格（输入框过滤）").ShowHeader(true)
        .Items(
            F.DropDownBox().ID("DropDownBox1").EmptyText("请从下拉表格中选择").EnableMultiSelect(true).MatchFieldWidth(false)
                .PopPanel(
                    F.Grid().ID("Grid1").Width(650).Height(300).DataIDField("Id").DataTextField("Name").EnableMultiSelect(true).KeepCurrentSelection(true).PageSize(5).ShowBorder(true).ShowHeader(false).AllowPaging(true).IsDatabasePaging(true).OnPageIndexChanged(Url.Action("Grid1_DoReBind"), "Grid1").EnableCheckBoxSelect(true).Hidden(true)
                        .Columns(
                            F.RowNumberField(),
                            F.RenderField().HeaderText("姓名").DataField("Name").Width(100),
                            F.RenderField().HeaderText("性别").DataField("Gender").FieldType(FieldType.Int).RendererFunction("renderGender").Width(80),
                            F.RenderField().HeaderText("入学年份").DataField("EntranceYear").FieldType(FieldType.Int).Width(100),
                            F.RenderCheckField().HeaderText("是否在校").DataField("AtSchool").RenderAsStaticField(true).Width(100),
                            F.RenderField().HeaderText("所学专业").DataField("Major").RendererFunction("renderMajor").ExpandUnusedSpace(true),
                            F.RenderField().HeaderText("分组").DataField("Group").RendererFunction("renderGroup").Width(80)
                        )
                        .Toolbars(
                            F.Toolbar().Position(ToolbarPosition.Top)
                                .Items(
                                    F.TwinTriggerBox().Width(300).EmptyText("在姓名中查找").ShowLabel(false).ID("ttbSearch").ShowTrigger1(false).OnTrigger1Click(Url.Action("ttbSearch_Trigger1Click"), "Grid1").OnTrigger2Click(Url.Action("Grid1_DoReBind"), "Grid1").Trigger1Icon(TriggerIcon.Clear).Trigger2Icon(TriggerIcon.Search)
                                )
                        ).RecordCount(ViewBag.Grid1RecordCount).DataSource(ViewBag.Grid1DataSource)
                ),
            F.Button().ID("btnGetSelection").Text("获取下拉框的选中值").OnClick(Url.Action("btnGetSelection_Click"), "DropDownBox1")
        )
    )
    <br>

    @(F.Label().ID("labResult"))

}


@section script {

    <script src="~/res/js/grid.js"></script>

}
