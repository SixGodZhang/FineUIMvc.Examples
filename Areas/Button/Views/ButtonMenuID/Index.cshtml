@{
    ViewBag.Title = "Button/ButtonMenuID";
    var F = Html.F();
}

@section body {

    @(F.Button().ID("btnMenu").Text("中国科学技术大学").MenuID("Menu1"))
    <br>
    <br>

    @(F.Button().ID("Button1").Text("中国科学技术大学（和上一个按钮共享同一个菜单）").MenuID("Menu1"))

    @(F.Menu().ID("Menu1")
        .Items(
            F.MenuHyperLink().ID("MenuHyperLink1").Icon(Icon.TagGreen).Target("_blank").NavigateUrl("http://scms.ustc.edu.cn/").Text("化学与材料科学学院"),
            F.MenuButton().ID("MenuButton1").Icon(Icon.TagBlue).Text("管理学院")
                .Menu(F.Menu()
                    .Items(
                        F.MenuHyperLink().ID("MenuHyperLink3").Icon(Icon.TagPink).Target("_blank").NavigateUrl("http://is.ustc.edu.cn/").Text("工商管理系"),
                        F.MenuHyperLink().ID("MenuHyperLink4").Icon(Icon.TagPurple).Target("_blank").NavigateUrl("http://stat.ustc.edu.cn/").Text("统计与金融系")
                    )
                )
        )
    )
    <br>
    <br>

}
