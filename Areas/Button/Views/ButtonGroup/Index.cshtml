@{
    ViewBag.Title = "Button/ButtonGroup";
    var F = Html.F();
}

@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).AutoScroll(true).Layout(LayoutType.VBox).BoxConfigChildMargin("0 0 10 0").IsViewPort(true).BodyPadding(10)
        .Items(
            F.ButtonGroup()
                .Items(
                    F.Button().ID("btnIcon1").Text("图标在左侧").Icon(Icon.Email),
                    F.Button().ID("btnIcon2").Text("图标在右侧").IconAlign(IconAlign.Right).Icon(Icon.Star),
                    F.Button().ID("Button7").Text("图标在左侧").IconFont(IconFont._Home),
                    F.Button().ID("Button8").Text("图标在右侧").IconAlign(IconAlign.Right).IconFont(IconFont._Car)
                ),
            F.ButtonGroup().ID("ButtonGroup1")
                .Items(
                    F.Button().ID("btnIcon3").Text("图标在上面").IconAlign(IconAlign.Top).Icon(Icon.Email),
                    F.Button().ID("btnIcon4").Text("图标在下面").IconAlign(IconAlign.Bottom).Icon(Icon.Star),
                    F.Button().ID("Button9").Text("图标在上面").IconAlign(IconAlign.Top).IconFont(IconFont._Camera),
                    F.Button().ID("Button10").Text("图标在下面").IconAlign(IconAlign.Bottom).IconFont(IconFont._Phone)
                ),
            F.Label().Text("只有图片的按钮："),
            F.ButtonGroup().ID("ButtonGroup2")
                .Items(
                    F.Button().ID("Button1").IconUrl(Url.Content("~/res/images/16/1.png")),
                    F.Button().ID("Button2").IconUrl(Url.Content("~/res/images/16/8.png")),
                    F.Button().ID("Button11").IconFont(IconFont._Android),
                    F.Button().ID("Button12").IconFont(IconFont._Apple),
                    F.Button().ID("Button13").IconFont(IconFont._Car),
                    F.Button().ID("Button14").IconFont(IconFont._Card)
                ),
            F.Label().Text("Size（Large）："),
            F.ButtonGroup().ID("ButtonGroup3")
                .Items(
                    F.Button().ID("Button3").Text("图标在上面").Size(ButtonSize.Large).IconAlign(IconAlign.Top).Icon(Icon.Email),
                    F.Button().ID("Button4").Text("图标在下面").Size(ButtonSize.Large).IconAlign(IconAlign.Bottom).Icon(Icon.Star),
                    F.Button().ID("Button5").Text("图标在上面").Size(ButtonSize.Large).IconAlign(IconAlign.Top).IconFont(IconFont._Camera),
                    F.Button().ID("Button6").Text("图标在下面").Size(ButtonSize.Large).IconAlign(IconAlign.Bottom).IconFont(IconFont._Phone)
                )
        )
    )


}

