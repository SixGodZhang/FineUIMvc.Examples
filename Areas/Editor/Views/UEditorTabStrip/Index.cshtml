@{
    ViewBag.Title = "Editor/UEditorTabStrip";
    var F = Html.F();
}


@section body {

    @(F.TabStrip().IsFluid(true).CssClass("blockpanel").ID("TabStrip1").Height(450).ShowBorder(true).TabPosition(TabPosition.Top).EnableTabCloseMenu(false).ActiveTabIndex(0)
        .Tabs(
            F.Tab().ID("Tab1").Title("选项卡一").BodyPadding(10).Layout(LayoutType.Anchor)
                .Items(
                    F.HtmlEditor().Label("编辑器一").ID("HtmlEditor1").Editor(Editor.UEditor)
                        .BasePath(Url.Content("~/res/third-party/ueditor/")).ToolbarSet(EditorToolbarSet.Full).Height(300).Text("<p>FineUIPro<br>基于 jQuery 的专业 ASP.NET 控件库。<br><br>FineUI的使命<br>创建 No JavaScript，No CSS，No UpdatePanel，No ViewState，No WebServices 的网站应用程序。<br><br>支持的浏览器<br>Chrome、Firefox、Safari、IE 8.0+<br><br>相关链接<br>首页：http://fineui.com/pro/<br>示例：http://pro.fineui.com/<br>更新：http://fineui.com/version_pro/</p>")
                ),
            F.Tab().ID("Tab2").Title("选项卡二").BodyPadding(10).Layout(LayoutType.Fit)
                .Items(
                    F.HtmlEditor().Label("编辑器二").ID("HtmlEditor2").Editor(Editor.UEditor)
                        .BasePath(Url.Content("~/res/third-party/ueditor/")).ToolbarSet(EditorToolbarSet.Basic).Text("<p>这是编辑器二的值</p>")
                )
        )
        .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Bottom)
                .Items(
                    F.Button().Text("获取编辑器的值").ID("Button1").OnClick(Url.Action("Button1_Click"),
                            new Parameter("text1", "F.htmlEncode(F.ui.HtmlEditor1.getValue())"),
                            new Parameter("text2", "F.htmlEncode(F.ui.HtmlEditor2.getValue())"))
                )
        )
    )


}

