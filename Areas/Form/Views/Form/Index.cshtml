@{
    ViewBag.Title = "Form/Form";
    var F = Html.F();
}


@section body {

    @(F.Form().IsFluid(true).CssClass("blockpanel").BodyPadding(10).ID("Form1").LabelWidth(100).Title("表单 1")
        .Rows(
            F.FormRow().ColumnWidths("50% 50%")
                .Items(
                    F.Label().ID("Label1").Label("标签").Text("标签的值"),
                    F.CheckBox().ID("CheckBox1").Text("复选框").Label("复选框")
                ),
            F.FormRow().ColumnWidths("50% 50%")
                .Items(
                    F.DropDownList().ID("DropDownList1").Required(true).ShowRedStar(true).AutoSelectFirstItem(false).Label("下拉列表")
                        .Items(
                            F.ListItem().Text("可选项 1").Value("0"),
                            F.ListItem().Text("可选项 2").Value("1")
                        ),
                    F.TextBox().ID("TextBox1").ShowRedStar(true).Label("文本框").Required(true).Text("")
                ),
            F.FormRow()
                .Items(
                    F.Button().Text("验证此表单并提交").CssClass("marginr").ValidateForms("Form1").ID("btnSubmitForm1").OnClick(Url.Action("btnSubmitForm_Click"), "Form1")
                )
        )
    )
    <br>

    @(F.Form().Width(600).LabelWidth(100).BodyPadding(10).ID("Form2").Title("表单 2")
        .Rows(
            F.FormRow()
                .Items(
                    F.Label().ID("Label3").Label("电话").Text("0551-1234567"),
                    F.Label().ID("Label16").Label("申请人").Text("admin")
                ),
            F.FormRow()
                .Items(
                    F.Label().ID("Label4").Label("编号").Text("200804170006"),
                    F.TextBox().ID("TextBox2").Required(true).ShowRedStar(true).Label("电子邮箱").RegexPattern(RegexPattern.EMAIL).RegexMessage("请输入有效的邮箱地址")
                ),
            F.FormRow()
                .Items(
                    F.DropDownList().ID("DropDownList3").Label("审批人").ForceSelection(false).Required(true).ShowRedStar(true).EmptyText("请选择审批人").AutoSelectFirstItem(false)
                        .Items(
                            F.ListItem().Text("老大甲").Value("0"),
                            F.ListItem().Text("老大乙").Value("1"),
                            F.ListItem().Text("老大丙").Value("2")
                        )
                ),
            F.FormRow()
                .Items(
                    F.NumberBox().ID("NumberBox1").Label("申请数量").NoDecimal(true).NoNegative(true).MaxValue(1000).Required(true).ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.TextArea().ID("TextArea1").Label("描述").ShowRedStar(true).Required(true)
                ),
            F.FormRow()
                .Items(
                    F.Panel().ID("Panel2").ShowBorder(false).ShowHeader(false)
                        .Items(
                            F.Button().ID("btnSubmitForm2").Text("验证此表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmitForm_Click"), "Form2").ValidateForms("Form2")
                        )
                )
        )
    )
    <br>

    @(F.Button().ID("btnSubmitAll").Text("验证两个表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmitForm_Click"), "Form1,Form2").ValidateForms("Form1,Form2"))


}

