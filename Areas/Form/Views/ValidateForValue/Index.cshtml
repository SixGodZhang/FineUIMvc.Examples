@{
    ViewBag.Title = "Form/ValidateForValue";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").BodyPadding(10).ID("SimpleForm1").Title("表单").LabelWidth(120)
        .Items(
            F.DropDownList().ID("DropDownList1").Label("DropDownList1").ShowRedStar(true).Required(true).MinLength(3)
                .Items(
                    F.ListItem().Text("甲").Value("301"),
                    F.ListItem().Text("老大乙").Value("201"),
                    F.ListItem().Text("老大丙").Value("101")
                ),
            F.DropDownList().ID("DropDownList3").Label("DropDownList2").ShowRedStar(true).Required(true).MinLength(3).ValidateForValue(true)
                .Items(
                    F.ListItem().Text("老大甲（Value=0）").Value("0"),
                    F.ListItem().Text("老大乙（Value=201）").Value("201"),
                    F.ListItem().Text("老大丙（Value=101）").Value("101")
                ),
            F.Button().ID("btnSubmit").Text("验证此表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmitForm_Click"), "SimpleForm1").ValidateForms("SimpleForm1")
        )
    )


}

