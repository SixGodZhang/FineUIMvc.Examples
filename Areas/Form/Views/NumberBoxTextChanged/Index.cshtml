@{
    ViewBag.Title = "Form/NumberBoxTextChanged";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).LabelAlign(LabelAlign.Top).Title("简单表单").LabelWidth(120)
        .Items(
            F.NumberBox().Label("非负整数").ID("NumberBox3").EmptyText("比如 99").OnTextChanged(Url.Action("NumberBox3_TextChanged"), new Parameter("text", "F.ui.NumberBox3.getValue()")).NoDecimal(true).NoNegative(true).Required(true).ShowRedStar(true),
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").Text("提交表单").OnClick(Url.Action("btnSubmit_Click"), new Parameter("text", "F.ui.NumberBox3.getValue()"))
        )
    )
    <br>
    <br>
    注：手工输入数字，或者点击右侧上下箭头都会触发文本改变事件。


}

