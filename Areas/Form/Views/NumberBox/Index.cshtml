@{
    ViewBag.Title = "Form/NumberBox";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).LabelAlign(LabelAlign.Top).Title("简单表单").LabelWidth(120)
        .Items(
            F.NumberBox().Label("0 到 9 的整数").ID("NumberBox1").MaxValue(9).MinValue(0).NoDecimal(true).NoNegative(true).Required(true).EmptyText("比如 8").ShowRedStar(true),
            F.NumberBox().Label("非负整数").ID("NumberBox3").EmptyText("比如 99").NoDecimal(true).NoNegative(true).Required(true).ShowRedStar(true),
            F.NumberBox().ID("NumberBox4").EmptyText("精度为 2，比如 0.35").Label("0 到 1 之间的小数（Increment=0.01）").MaxValue(1).MinValue(0).NoDecimal(false).NoNegative(true).DecimalPrecision(2).Required(true).ShowRedStar(true).Increment(0.01),
            F.NumberBox().Label("任意整数（ShowTrigger=false）").ID("NumberBox5").NoDecimal(true).ShowTrigger(false),
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").Text("提交表单").OnClick(Url.Action("btnSubmit_Click"), "SimpleForm1")
        )
    )


}

