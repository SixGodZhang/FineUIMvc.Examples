@{
    ViewBag.Title = "Form/FormLongLabel";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).Title("简单表单")
        .Items(
            F.TextBox().Label("文本输入框（很长很长很长的标签）").ID("tbxUserName").Required(true).ShowRedStar(true),
            F.TriggerBox().ID("tbxMyBox1").ShowLabel(true).ShowRedStar(true).Required(true).Label("触发器输入框（很长很长很长的标签）").Readonly(false).TriggerIcon(TriggerIcon.Search),
            F.NumberBox().Label("数字输入框（很长很长很长的标签）").ID("NumberBox5").ShowRedStar(true).Required(true),
            F.DatePicker().DateFormatString("yyyy-MM-dd").Label("日期选择器（很长很长很长的标签）").ID("DatePicker1").ShowRedStar(true).Required(true),
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").Text("提交表单").OnClick(Url.Action("btnSubmit_Click"), "SimpleForm1")
        )
    )



}

