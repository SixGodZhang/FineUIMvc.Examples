@{
    ViewBag.Title = "Form/NumberBoxCommas";
    var F = Html.F();
}


@section body {

    @(F.SimpleForm().IsFluid(true).CssClass("blockpanel").ID("SimpleForm1").BodyPadding(10).LabelAlign(LabelAlign.Top).Title("简单表单").LabelWidth(120)
        .Items(
            F.NumberBox().Label("小数").ID("NumberBox1").Text("-123456789.2345").EnableCommas(true).Required(true).ShowRedStar(true),
            F.NumberBox().Label("正整数").ID("NumberBox2").NoDecimal(true).NoNegative(true).Text("987654321").EnableCommas(true).ShowTrigger(false),
            F.Button().ID("btnSubmit").ValidateForms("SimpleForm1").Text("提交表单").OnClick(Url.Action("btnSubmit_Click"), "SimpleForm1")
        )
    )
    <br>

    @(F.Label().ID("labResult"))


}

