@{
    ViewBag.Title = "Form/FormReset";
    var F = Html.F();
}


@section body {

    @(F.Form().IsFluid(true).CssClass("blockpanel").BodyPadding(10).ID("Form1").Title("表单 1").IconFont(IconFont._Anchor)
        .Rows(
            F.FormRow().ColumnWidths("60% 40%")
                .Items(
                    F.Label().ID("Label1").Label("标签").Text("标签的值"),
                    F.CheckBox().ID("CheckBox1").Text("复选框").Label("复选框")
                ),
            F.FormRow().ColumnWidths("60% 40%")
                .Items(
                    F.DropDownList().ID("DropDownList1").Label("下拉列表").EmptyText("请选择一项").Required(true).ShowRedStar(true).AutoSelectFirstItem(false)
                        .Items(
                            F.ListItem().Text("可选项 1").Value("0"),
                            F.ListItem().Text("可选项 2").Value("1")
                        ),
                    F.TextBox().ID("TextBox1").ShowRedStar(true).Label("文本框").Required(true).Text("")
                ),
            F.FormRow()
                .Items(
                    F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false)
                        .Items(
                            F.Button().Text("验证此表单并提交").CssClass("marginr").ValidateForms("Form1").ID("btnSubmitForm1").OnClick(Url.Action("btnSubmitForm1_Click"), "Form1"),
                            F.Button().ID("btnResetForm1").Text("重置表单1").Listener("click", "F.ui.Form1.reset();")
                        )
                )
        )
    )
    <br>

    @(F.Form().Width(600).LabelWidth(100).BodyPadding(10).ID("Form2").Title("表单 2")
        .Rows(
            F.FormRow()
                .Items(
                    F.Label().ID("Label3").Label("电话").Text("0551-1234567"),
                    F.Label().ID("Label16").Label("申请人").Text("admin")
                ),
            F.FormRow()
                .Items(
                    F.Label().ID("Label4").Label("编号").Text("200804170006"),
                    F.TextBox().ID("TextBox2").Required(true).ShowRedStar(true).Label("电子邮箱").EmptyText("请输入常用电子邮箱").RegexPattern(RegexPattern.EMAIL).RegexMessage("请输入有效的邮箱地址！")
                ),
            F.FormRow()
                .Items(
                    F.DropDownList().ID("DropDownList3").Label("审批人").Required(true).EmptyText("请选择审批人").ShowRedStar(true).AutoSelectFirstItem(false)
                        .Items(
                            F.ListItem().Text("老大甲").Value("0"),
                            F.ListItem().Text("老大乙").Value("1"),
                            F.ListItem().Text("老大丙").Value("2")
                        )
                ),
            F.FormRow()
                .Items(
                    F.NumberBox().ID("NumberBox1").Label("申请数量").NoDecimal(true).NoNegative(true).EmptyText("请输入申请数量").MaxValue(1000).Required(true).ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.TextArea().ID("TextArea1").Label("描述").ShowRedStar(true).Required(true)
                ),
            F.FormRow()
                .Items(
                    F.Panel().ID("Panel2").ShowBorder(false).ShowHeader(false)
                        .Items(
                            F.Button().ID("btnSubmitForm2").Text("验证此表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmitForm2_Click"), "Form2").ValidateForms("Form2"),
                            F.Button().ID("btnResetForm2").Text("重置表单2").Listener("click", "F.ui.Form2.reset();")
                        )
                )
        )
    )
    <br>

    @(F.Button().ID("btnSubmitAll").Text("验证两个表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmitAll_Click"), "Form1,Form2").ValidateForms("Form1,Form2"))

    @(F.Button().ID("btnResetAll").Text("重置表单1和表单2").Listener("click", "F.ui.Form1.reset();F.ui.Form2.reset();"))
    <br>
    <br>
    注：下拉列表设置属性 Required="true" 和 AutoSelectFirstItem="false"，这样初始没有选中值，提交表单时不能为空。


}

