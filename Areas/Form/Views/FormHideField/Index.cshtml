@{
    ViewBag.Title = "Form/FormHideField";
    var F = Html.F();
}


@section body {

    @(F.Form().IsFluid(true).CssClass("blockpanel").LabelWidth(100).BodyPadding(10).ID("Form1").Title("表单")
        .Rows(
            F.FormRow()
                .Items(
                    F.Label().ID("labTitle").HideMode(HideMode.Visibility).Label("标题").Text("申请单"),
                    F.Label().ID("labLiuShuiHao").Label("流水号").Text("123456789")
                ),
            F.FormRow().ID("FormRow2")
                .Items(
                    F.Label().ID("labPhone").Label("电话").Text("0551-1234567"),
                    F.Label().ID("Label16").Label("申请人").Text("admin")
                ),
            F.FormRow().ID("FormRow3").HideMode(HideMode.Visibility)
                .Items(
                    F.Label().ID("Label4").Label("编号").Text("200804170006"),
                    F.TextBox().ID("TextBox2").Required(true).ShowRedStar(true).Label("电子邮箱").EmptyText("请输入常用电子邮箱").RegexPattern(RegexPattern.EMAIL).RegexMessage("请输入有效的邮箱地址")
                ),
            F.FormRow()
                .Items(
                    F.DropDownList().ID("DropDownList3").Label("审批人").Required(true).EmptyText("请选择审批人").ShowRedStar(true).AutoSelectFirstItem(false)
                        .Items(
                            F.ListItem().Text("老大甲").Value("0"),
                            F.ListItem().Text("老大乙").Value("1"),
                            F.ListItem().Text("老大丙").Value("2")
                        ),
                    F.NumberBox().ID("NumberBox1").Label("申请数量").NoDecimal(true).NoNegative(true).EmptyText("请输入申请数量").MaxValue(1000).Required(true).ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.TextArea().ID("TextArea1").Label("描述").ShowRedStar(true).Required(true)
                ),
            F.FormRow()
                .Items(
                    F.Panel().ID("Panel2").ShowBorder(false).ShowHeader(false)
                        .Items(
                            F.Button().ID("btnSubmit").Text("验证表单并提交").CssClass("marginr").OnClick(Url.Action("btnSubmit_Click"), "Form1").ValidateForms("Form1")
                        )
                )
        )
    )
    <br>

    @(F.Button().ID("btnShowHideTitle").Text("显示隐藏[标题]").CssClass("marginr").Listener("click", "F.ui.labTitle.toggleVisible();"))

    @(F.Button().ID("btnShowHidePhone").Text("显示隐藏[电话]").Listener("click", "F.ui.labPhone.toggleVisible();"))
    <br>
    <br>

    @(F.Button().ID("btnShowHideFormRow2").Text("显示隐藏第二行").CssClass("marginr").Listener("click", "F.ui.FormRow2.toggleVisible();"))

    @(F.Button().ID("btnShowHideFormRow3").Text("显示隐藏第三行（隐藏后显示空白行）").CssClass("marginr").Listener("click", "F.ui.FormRow3.toggleVisible();"))
    <br>
    <br>
    注：
    <ul>
        <li>
            对比隐藏[标题]和隐藏[电话]的不同之处（[标题]的HideMode=Visibility）
        </li>
        <li>
            对比隐藏第二行和隐藏第三行的不同之处（FormRow3的HideMode=Visibility）
        </li>
    </ul>


}

