@{
    ViewBag.Title = "GridPaging/ClearSelectionBeforePagingDetails";
    var F = Html.F();
}


@section body {

    @(F.Grid().IsFluid(true).CssClass("blockpanel").EnableCheckBoxSelect(true).ShowHeader(true).ShowBorder(true).Title("表格（跨页选中行）").ID("Grid1").DataIDField("Id").DataTextField("Name").AllowPaging(true).PageSize(5).KeepCurrentSelection(true).ClearSelectionBeforePaging(false).KeepPagedSelection(true)
        .Columns(
            F.RowNumberField(),
            F.RenderField().HeaderText("姓名").DataField("Name").Width(100),
            F.RenderField().HeaderText("性别").DataField("Gender").FieldType(FieldType.Int).RendererFunction("renderGender").Width(80),
            F.RenderField().HeaderText("入学年份").DataField("EntranceYear").FieldType(FieldType.Int).Width(100),
            F.RenderCheckField().HeaderText("是否在校").DataField("AtSchool").RenderAsStaticField(true).Width(100),
            F.RenderField().HeaderText("所学专业").DataField("Major").RendererFunction("renderMajor").ExpandUnusedSpace(true),
            F.RenderField().HeaderText("分组").DataField("Group").RendererFunction("renderGroup").Width(80),
            F.RenderField().HeaderText("注册日期").DataField("LogTime").FieldType(FieldType.Date).Renderer(Renderer.Date).RendererArgument("yyyy-MM-dd").Width(100)
        )
        .DataSource(DataSourceUtil.GetDataTable2()).Listener("beforepaging", "OnGrid1BeforePaging")
    )
    <br>

    @(F.Button().Text("选中了哪些行").CssClass("marginr").Listener("click", "notifySelectedRows();"))
    <br>
    <br>
    注意设置属性：
    <ul>
        <li>DataIDField=Id：行标识符字段</li>
        <li>ClearSelectionBeforePaging=false：分页前不要清空选中项</li>
        <li>KeepCurrentSelection=true：多选时保持当前已选中行</li>
        <li>KeepPagedSelection=true：多选时保持分页中已选中行</li>
    </ul>

}


@section script {

    <script src="~/res/js/grid.js"></script>

    <script>

        // 缓存的行数据
        var cachedRows = {};

        function notifySelectedRows() {
            // 缓存当前页选中行数据
            cacheCurrentPage();

            var selectedRowIds = F.ui.Grid1.getSelectedRows();

            if (!selectedRowIds.length) {
                F.alert('没有选中项！');
                return;
            }

            var result = ['<table class="result">'];
            result.push('<tr>');
            result.push('<th>ID</th>');
            result.push('<th>Text</th>');
            result.push('<th>性别</th>');
            result.push('<th>专业</th>');
            result.push('</tr>');

            $.each(selectedRowIds, function(index, item) {
                var rowId = item, rowData = cachedRows[rowId];
                result.push('<tr>');
                result.push('<td>' + rowId + '</td>');
                result.push('<td>' + rowData.text + '</td>');
                result.push('<td>' + (rowData.values['Gender'] == 1 ? '男' : '女') + '</td>');
                result.push('<td>' + rowData.values['Major'] + '</td>');
                result.push('</tr>');
            });
            result.push('</table>');

            F.notify({
                message: result.join(''),
                target: '_top',
                header: false,
                messageIcon: '',
                displayMilliseconds: 3000,
                positionX: 'center',
                positionY: 'top'
            });
        }

        // 缓存当前页选中行的数据
        function cacheCurrentPage() {
            $.each(F.ui.Grid1.getSelectedRows(true), function (index, item) {
                var rowId = item.id;
                if (!cachedRows[rowId]) {
                    cachedRows[rowId] = item;
                }
            });
        }

        function OnGrid1BeforePaging(event, pageIndex) {
            // 缓存当前页选中行数据
            cacheCurrentPage();
        }

    </script>
}